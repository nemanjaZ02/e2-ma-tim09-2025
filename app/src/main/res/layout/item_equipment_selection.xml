<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    card_view:cardBackgroundColor="#F5DEB3"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Equipment Icon -->
        <ImageView
            android:id="@+id/ivEquipmentIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_equipment_default"
            android:contentDescription="Equipment icon"
            android:layout_marginEnd="16dp" />

        <!-- Equipment Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvEquipmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Equipment Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#5C4033"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvEquipmentUses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount left: 0"
                android:textSize="14sp"
                android:textColor="#8B4513"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/tvEquipmentUpgrades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upgrades: 0"
                android:textSize="12sp"
                android:textColor="#8B4513" />

        </LinearLayout>

        <!-- Selection Indicator -->
        <ImageView
            android:id="@+id/ivSelectionIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            android:contentDescription="Selected" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatusBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACTIVE"
            android:textSize="10sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/status_background"
            android:padding="4dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
