<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:fontFamily="serif"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Active Days Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number of active usage days"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/activeDaysStreakText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="consecutive days"
                    android:textSize="14sp"
                    android:textColor="#8B4513"
                    android:fontFamily="serif"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Longest Task Streak Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longest streak of successfully completed tasks"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/longestTaskStreakText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#8B4513"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="days in a row"
                    android:textSize="14sp"
                    android:textColor="#8B4513"
                    android:fontFamily="serif"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Task Status Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Status"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/taskStatusChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Category Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Completed tasks by category"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/categoryChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Difficulty Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Average difficulty of completed tasks"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/difficultyChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- XP Progress Chart Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XP earned in the last 7 days"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/xpProgressChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mission Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFF3E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mission Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Mission Stats Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <!-- Started Missions -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Started Missions"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/startedMissionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#5C4033"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Finished Missions -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Finished Missions"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/finishedMissionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- Success Rate -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Success Rate"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:gravity="center" />

                        <TextView
                            android:id="@+id/successRateText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0%"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Mission Comparison Chart -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mission Success Comparison"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#5C4033"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/missionComparisonChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
