<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    android:padding="16dp">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- My Alliance Section -->
            <TextView
                android:id="@+id/textViewMyAllianceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Alliance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5C4033"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMyAllianceTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_special_task" />

            <!-- Member Alliance Section -->
            <TextView
                android:id="@+id/textViewMemberAllianceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Member Alliance"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5C4033"
                android:background="@drawable/card_background"
                android:padding="12dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewMemberAllianceTasks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:background="@drawable/card_background"
                android:padding="8dp"
                tools:listitem="@layout/item_special_task" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/textViewNoTasks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No special tasks available.\nJoin an alliance and wait for a special mission to start!"
        android:textSize="16sp"
        android:textColor="#8B4513"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
