<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    tools:context=".activities.tasks.TaskDetailsActivity">

    <TextView
        android:id="@+id/taskDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quest Details"
        android:textColor="#5C4033"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="serif"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/taskDetailTitle"
        app:layout_constraintBottom_toTopOf="@id/taskActionButtonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Title"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#5C4033"
                    app:hintTextColor="#8B4513">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/taskNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="serif"
                        android:textColor="#3E2723" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/editTaskNameButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Task Name"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskNameEditButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelTaskNameEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptTaskNameEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Description"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="#5C4033"
                    app:hintTextColor="#8B4513">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/taskDescriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:fontFamily="serif"
                        android:textColor="#3E2723"
                        android:inputType="textMultiLine"
                        android:lines="4" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageButton
                    android:id="@+id/editTaskDescriptionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Task Description"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taskDescriptionEditButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelTaskDescriptionEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptTaskDescriptionEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Category"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/taskCategoryLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxStrokeColor="#5C4033"
                app:hintTextColor="#8B4513">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/categoryTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:focusable="false"
                    android:cursorVisible="false"
                    android:fontFamily="serif"
                    android:textColor="#3E2723"/>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Difficulty"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/difficultySpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:popupBackground="#D2B48C"
                    android:background="@drawable/spinner_background"
                    style="@style/CustomSpinner" />

                <ImageButton
                    android:id="@+id/editDifficultyButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Difficulty"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/difficultyEditButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelDifficultyEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptDifficultyEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Priority"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <Spinner
                    android:id="@+id/prioritySpinner"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:popupBackground="#D2B48C"
                    android:background="@drawable/spinner_background"
                    style="@style/CustomSpinner" />

                <ImageButton
                    android:id="@+id/editPriorityButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Priority"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/priorityEditButtonsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_marginTop="8dp"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancelPriorityEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    style="@style/Widget.Material3.Button.TextButton"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/acceptPriorityEditButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Deadline"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/finishDateButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Complete until [Select Date]"
                    android:textColor="#d0c3c3"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#5C4033"
                    app:backgroundTint="#D2B48C"
                    app:icon="@drawable/ic_calendar"
                    app:iconTint="#d0c3c3"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />

                <ImageButton
                    android:id="@+id/editFinishDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_edit"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Edit Finish Date"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/recurrenceCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Recurring Quest?"
                android:textColor="#5C4033"
                android:fontFamily="serif"
                android:buttonTint="#8B4513"
                android:enabled="false" />

            <LinearLayout
                android:id="@+id/recurrenceFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Every"
                        android:textColor="#5C4033"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:boxStrokeColor="#5C4033"
                        app:hintTextColor="#8B4513"
                        android:hint="Interval">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recurrenceIntervalEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:textColor="#3E2723"
                            android:inputType="number"
                            android:fontFamily="serif"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/recurrenceUnitSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:spinnerMode="dropdown"
                        android:popupBackground="#D2B48C"
                        android:backgroundTint="#8B4513"
                        android:enabled="false"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recurrenceEndDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Recur until [select date]"
                    android:textColor="#d0c3c3"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:enabled="false"
                    app:strokeWidth="1dp"
                    app:strokeColor="#5C4033"
                    app:backgroundTint="#D2B48C"
                    app:icon="@drawable/ic_calendar"
                    app:iconTint="#d0c3c3"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/taskActionButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finishQuestButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Finish Quest"
            android:textColor="#F0F0F0"
            android:backgroundTint="#8BC34A"
            android:fontFamily="serif"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/pauseQuestButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:text="Pause Quest"
                android:textColor="#5C4033"
                android:backgroundTint="#FFEB3B"
                android:fontFamily="serif"
                android:textSize="16sp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelQuestButton"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Cancel Quest"
                android:textColor="#F0F0F0"
                android:backgroundTint="#F44336"
                android:fontFamily="serif"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>