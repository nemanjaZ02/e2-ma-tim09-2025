<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#D2B48C">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp">

        <ImageButton
            android:id="@+id/buttonBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Alliance"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:gravity="center" />

        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- No Alliance Message -->
    <TextView
        android:id="@+id/textViewNoAlliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You haven't created any alliance yet.\nCreate one from the menu!"
        android:textSize="16sp"
        android:textColor="#8B4513"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:visibility="gone" />

    <!-- Alliance Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewAllianceName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alliance Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/textViewMembersCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members: 0"
            android:textSize="14sp"
            android:textColor="#8B4513"
            android:gravity="center" />

        <TextView
            android:id="@+id/textViewMissionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mission Status: Inactive"
            android:textSize="12sp"
            android:textColor="#8B4513"
            android:gravity="center"
            android:layout_marginTop="4dp" />

        <!-- Special Mission Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartSpecialMission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Special Mission"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            app:icon="@drawable/ic_star"
            app:iconGravity="textStart"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Chat Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAllianceChat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’¬ Alliance Chat"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#5C4033"
        android:visibility="gone" />

    <!-- Special Mission Progress Section -->
    <LinearLayout
        android:id="@+id/specialMissionProgressSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Special Mission Progress"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Boss Health Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/textViewBossHealth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boss Health: 1000/1000"
                android:textSize="14sp"
                android:textColor="#8B4513"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <ProgressBar
                android:id="@+id/progressBarBossHealth"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100"
                android:progress="100"
                android:progressTint="#4CAF50" />

        </LinearLayout>

        <!-- Mission Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/textViewMissionNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mission #1"
                android:textSize="12sp"
                android:textColor="#8B4513"
                android:gravity="start" />

            <TextView
                android:id="@+id/textViewTimeRemaining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Time: 13d 23h 59m"
                android:textSize="12sp"
                android:textColor="#8B4513"
                android:gravity="end" />

        </LinearLayout>

        <!-- Members Progress -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Members Progress"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMembersProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="200dp" />

    </LinearLayout>

    <!-- Members Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Members"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5C4033"
        android:layout_marginBottom="8dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMembers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/card_background"
        android:padding="8dp" />

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonInviteUsers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Invite Users"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#5C4033" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDeleteAlliance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Delete Alliance"
            android:layout_marginStart="8dp"
            android:backgroundTint="#D32F2F"
            app:icon="@drawable/ic_close"
            app:iconGravity="textStart" />

    </LinearLayout>

    <!-- Eligible Users Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Eligible Users"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5C4033"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEligibleUsers"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/card_background"
        android:padding="8dp"
        android:visibility="gone" />

</LinearLayout>
