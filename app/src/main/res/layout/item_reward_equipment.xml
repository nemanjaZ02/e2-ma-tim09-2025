<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/ivEquipmentIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="12dp"
        android:contentDescription="Equipment icon" />

    <TextView
        android:id="@+id/tvEquipmentName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Equipment Name"
        android:textColor="@color/text_primary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvEquipmentType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/equipment_type_badge"
        android:padding="4dp"
        android:text="Clothes"
        android:textColor="@color/text_primary"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
