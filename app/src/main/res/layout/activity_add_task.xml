<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    tools:context=".activities.tasks.AddTaskActivity">

    <TextView
        android:id="@+id/addTaskTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="New Quest"
        android:textColor="#5C4033"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/addTaskTitle"
        app:layout_constraintBottom_toTopOf="@id/saveTaskButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Title"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/taskNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Quest Ttitle here"
                app:boxStrokeColor="#5C4033"
                app:hintTextColor="#8B4513">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taskNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textColor="#3E2723"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Descritption"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/taskDescriptionLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Quest Description here"
                app:boxStrokeColor="#5C4033"
                app:hintTextColor="#8B4513">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/taskDescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textColor="#3E2723"
                    android:inputType="textMultiLine"
                    android:lines="4" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/categoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Category"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#D2B48C"
                android:background="@drawable/spinner_background"
                style="@style/CustomSpinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Difficulty"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/difficultySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#D2B48C"
                android:background="@drawable/spinner_background"
                style="@style/CustomSpinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Priority"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/prioritySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:spinnerMode="dropdown"
                android:popupBackground="#D2B48C"
                android:background="@drawable/spinner_background"
                style="@style/CustomSpinner" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Quest Deadline"
                android:textColor="#5C4033"
                android:textSize="16sp"
                android:fontFamily="serif"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/finishDateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Complete until [Select Date]"
                android:textColor="#d0c3c3"
                android:fontFamily="serif"
                android:textSize="16sp"
                android:gravity="center_vertical|start"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:visibility="visible"
                app:cornerRadius="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#5C4033"
                app:backgroundTint="#D2B48C"
                app:icon="@drawable/ic_calendar"
                app:iconTint="#d0c3c3"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <CheckBox
                android:id="@+id/recurrenceCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Recurring Quest?"
                android:textColor="#5C4033"
                android:fontFamily="serif"
                android:buttonTint="#8B4513" />

            <LinearLayout
                android:id="@+id/recurrenceFields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Every"
                        android:textColor="#5C4033"
                        android:textSize="16sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        app:boxStrokeColor="#5C4033"
                        app:hintTextColor="#8B4513"
                        android:hint="Interval">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/recurrenceIntervalEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#3E2723"
                            android:inputType="number"
                            android:fontFamily="serif"/>
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/recurrenceUnitSpinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:spinnerMode="dropdown"
                        android:popupBackground="#D2B48C"
                        android:backgroundTint="#8B4513"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/recurrenceEndDateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Recur until [select date]"
                    android:textColor="#d0c3c3"
                    android:fontFamily="serif"
                    android:textSize="16sp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible"
                    app:cornerRadius="8dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#5C4033"
                    app:backgroundTint="#D2B48C"
                    app:icon="@drawable/ic_calendar"
                    app:iconTint="#d0c3c3"
                    app:iconGravity="textStart"
                    app:iconPadding="8dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/saveTaskButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#B00020"
        android:fontFamily="serif"
        android:text="Accept Quest"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>