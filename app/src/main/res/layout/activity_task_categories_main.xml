<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    tools:context=".activities.taskCategories.TaskCategoriesMainActivity">

    <TextView
        android:id="@+id/categoriesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:text="CATEGORIES â–¼"
        android:textColor="#5C4033"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/categoriesTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_category_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="+"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        android:backgroundTint="#B00020"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/profile_button"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginEnd="18dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#5C4033"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:icon="@drawable/ic_profile"
        app:iconTint="#D2B48C"
        app:layout_constraintBottom_toBottomOf="@id/logout_button"
        app:layout_constraintStart_toEndOf="@id/logout_button"
        style="@style/Widget.MaterialComponents.Button.Icon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_button"
        android:layout_width="48dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#5C4033"
        app:cornerRadius="30dp"
        app:elevation="8dp"
        app:icon="@drawable/ic_logout"
        app:iconTint="#D2B48C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.Button.Icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
