<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C">

    <!-- Username -->
    <TextView
        android:id="@+id/otherProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#3E2723"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Avatar -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/otherProfileAvatar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/otherProfileUsername"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Level -->
    <TextView
        android:id="@+id/otherProfileLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level: 1"
        android:textSize="18sp"
        android:textColor="#3E2723"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Title -->
    <TextView
        android:id="@+id/otherProfileTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="16sp"
        android:textColor="#3E2723"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- XP -->
    <TextView
        android:id="@+id/otherProfileXP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP: 0"
        android:textSize="16sp"
        android:textColor="#3E2723"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- QR Code -->
    <!-- QR Code -->
    <ImageView
        android:id="@+id/otherProfileQRCode"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="12dp"
        android:background="#E6E6E6"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/otherProfileXP"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Badges label -->
    <TextView
        android:id="@+id/otherProfileBadgesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badges"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5C4033"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileQRCode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Badges container -->
    <LinearLayout
        android:id="@+id/otherProfileBadges"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileBadgesLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#E6E6E6"/>

    <!-- Equipment label -->
    <TextView
        android:id="@+id/otherProfileEquipmentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Equipment"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#5C4033"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileBadges"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Equipment container -->
    <LinearLayout
        android:id="@+id/otherProfileEquipment"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/otherProfileEquipmentLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#E6E6E6"/>


</androidx.constraintlayout.widget.ConstraintLayout>
