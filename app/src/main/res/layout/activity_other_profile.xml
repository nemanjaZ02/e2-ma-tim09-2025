<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Username -->
            <TextView
                android:id="@+id/otherProfileUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#3E2723"
                android:layout_marginTop="24dp"/>

            <!-- Avatar -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/otherProfileAvatar"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                android:scaleType="centerCrop"/>

            <!-- Level -->
            <TextView
                android:id="@+id/otherProfileLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: 1"
                android:textSize="18sp"
                android:textColor="#3E2723"
                android:layout_marginTop="12dp"/>

            <!-- Title -->
            <TextView
                android:id="@+id/otherProfileTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="16sp"
                android:textColor="#3E2723"
                android:layout_marginTop="4dp"/>

            <!-- XP -->
            <TextView
                android:id="@+id/otherProfileXP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XP: 0"
                android:textSize="16sp"
                android:textColor="#3E2723"
                android:layout_marginTop="4dp"/>

            <!-- QR Code -->
            <ImageView
                android:id="@+id/otherProfileQRCode"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginTop="12dp"
                android:background="#E6E6E6"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Scan QR Code Button -->
            <Button
                android:id="@+id/btnScanQRCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scan QR Code"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:backgroundTint="#5C4033"
                app:cornerRadius="8dp"
                android:layout_marginTop="8dp"/>

            <!-- Badges label -->
            <TextView
                android:id="@+id/otherProfileBadgesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Badges"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5C4033"
                android:layout_marginTop="16dp"/>

            <!-- Badges container -->
            <LinearLayout
                android:id="@+id/otherProfileBadges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="#FFF3E0"
                android:padding="6dp"
                android:minHeight="80dp"/>

            <!-- Equipment label -->
            <TextView
                android:id="@+id/otherProfileEquipmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Equipment"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#5C4033"
                android:layout_marginTop="16dp"/>

            <!-- Equipment container with vertical scrolling -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:background="#FFF3E0"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:scrollbarThumbVertical="@android:color/darker_gray"
                android:scrollbarTrackVertical="@android:color/white"
                android:scrollbarSize="8dp"
                android:overScrollMode="always">

                <LinearLayout
                    android:id="@+id/otherProfileEquipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp">
                    <!-- Equipment items will be added here -->
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>