<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D2B48C"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Select Equipment"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Close" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Choose equipment to activate before boss battle:"
        android:textSize="16sp"
        android:textColor="#8B4513"
        android:background="@drawable/card_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Equipment List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEquipment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/card_background"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/tvInstructions"
        app:layout_constraintBottom_toTopOf="@id/layoutSelectedEquipment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selected Equipment Info -->
    <LinearLayout
        android:id="@+id/layoutSelectedEquipment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/layoutButtons"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Equipment:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5C4033"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvSelectedEquipmentName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Equipment Name"
            android:textSize="14sp"
            android:textColor="#8B4513"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvSelectedEquipmentUses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount left: 0"
            android:textSize="12sp"
            android:textColor="#8B4513" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip"
            android:textColor="#8B4513"
            android:background="@drawable/button_secondary"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_primary"
            android:layout_marginStart="8dp"
            android:enabled="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
