<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Questify"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        <activity
            android:name=".activities.bosses.BossMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.bosses.MainBossActivity"
            android:exported="false" />
        <activity
            android:name=".activities.taskCategories.TaskCategoryDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.taskCategories.AddTaskCategoryActivity"
            android:exported="false" />
        <activity
            android:name=".activities.taskCategories.TaskCategoriesMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.taskCategories.CategoriesMainActivity"
            android:exported="false"
            android:theme="@style/Theme.Questify" />
        <activity
            android:name=".activities.tasks.TaskDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.AddTaskActivity"
            android:exported="false" />
        <activity
            android:name=".activities.tasks.TasksMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.specialTasks.SpecialTasksMainActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.AllUsersActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.FriendsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.users.OtherProfileActivity"
            android:exported="false" />
        <activity
            android:name=".activities.alliance.CreateAllianceActivity"
            android:exported="false" />
        <activity
            android:name=".activities.alliance.MyAllianceActivity"
            android:exported="false" />
        <activity
            android:name=".activities.alliance.AllianceInviteDialogActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.Dialog" />
        <activity
            android:name=".activities.alliance.MemberAllianceActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ShopActivity"
            android:exported="false" />
        <activity
            android:name=".activities.StatisticsActivity"
            android:exported="false" />
        <activity
            android:name=".activities.alliance.AllianceChatActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Firebase Messaging Service -->
        <service
            android:name=".services.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- Alliance Invite Action Receiver -->
        <receiver
            android:name=".receivers.AllianceInviteActionReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="ACCEPT_INVITE" />
                <action android:name="DECLINE_INVITE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>